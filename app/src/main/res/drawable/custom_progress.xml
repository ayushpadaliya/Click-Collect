<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8" >
        <size
            android:height="48dp"
            android:width="48dp" />
        <gradient
            android:centerColor="#EDB265"
            android:endColor="#E8C79C"
            android:startColor="#F1ECE6"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>
