<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4ssp"
        android:layout_gravity="center"
        android:background="@color/editBack1"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="@dimen/_40ssp"
            android:layout_height="@dimen/_40ssp"
            android:layout_marginStart="@dimen/_3ssp"
            android:background="@drawable/iconbg"/>
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img1"
            android:textSize="@dimen/_22ssp"
            android:fontFamily="@font/fontstyle"
            android:textColor="@color/background"
            android:textStyle="bold"
            android:padding="@dimen/_3ssp"
            android:text="@string/home" />
        <ImageView
            android:id="@+id/cartFragment"
            android:layout_width="@dimen/_34ssp"
            android:layout_height="@dimen/_36ssp"
            android:layout_marginEnd="@dimen/_4ssp"
            android:background="@drawable/pannier"
            android:layout_toStartOf="@+id/user_log1"
            android:contentDescription="TODO" />


        <ImageView
            android:id="@+id/user_log1"
            android:layout_width="@dimen/_34ssp"
            android:layout_height="@dimen/_36ssp"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:background="@drawable/marketing"
            android:contentDescription="TODO" />
    </RelativeLayout>



    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/_14sdp"
        android:padding="@dimen/_5ssp"
        android:background="@drawable/border"
        android:hint="@string/search"
        android:fontFamily="@font/fontstyle"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_5ssp"
        android:layout_marginEnd="@dimen/_15ssp"
        android:textColorHint="@color/lightgreen"
        android:drawableEnd="@drawable/search"
        android:drawableTint="@color/lightgreen"
        android:autofillHints=""
        android:inputType="textFilter" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_12ssp"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_1ssp"
            android:background="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vendors"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/background"
            android:paddingHorizontal="@dimen/_20ssp"
            android:fontFamily="@font/fontstyle"/>
        <View
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_1ssp"
            android:background="@color/black"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/found1"
        android:layout_margin="@dimen/_50sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@drawable/found"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_recycle"/>


</LinearLayout>