<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.UserHomePageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10ssp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_46sdp"
            android:layout_gravity="top"
            android:background="@drawable/sidebar" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/_24sdp"
            android:fontFamily="@font/fontstyle"
            android:gravity="top"
            android:paddingHorizontal="@dimen/_10ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/home" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:paddingTop="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginEnd="@dimen/_8ssp"
            android:background="@drawable/vector"
            android:padding="@dimen/_10ssp" />

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/_5ssp"
            android:background="@drawable/marketing" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10ssp"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10ssp"
            android:background="@drawable/allproducts"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10ssp"
            android:background="@drawable/allcategory"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vendors"
        android:textSize="@dimen/_20ssp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/_10ssp"
        android:paddingHorizontal="@dimen/_20ssp"
        android:fontFamily="@font/fontstyle"/>


</LinearLayout>