<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.vendor.VendorMainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:layout_margin="@dimen/_10ssp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_gravity="top"
            android:background="@drawable/icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/_24sdp"
            android:layout_weight="1"
            android:fontFamily="@font/fontstyle"
            android:gravity="top"
            android:paddingHorizontal="@dimen/_10ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/vendor" />
        <ImageView
            android:id="@+id/user_orders"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5ssp"
            android:background="@drawable/orrder2"/>

        <ImageView
            android:id="@+id/user_logout"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_5ssp"
            android:background="@drawable/checker"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category"
        app:cardCornerRadius="@dimen/_8ssp"
        android:layout_margin="@dimen/_20ssp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_12ssp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/greenbg"
            >
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/categoriesmain"/>
            <TextView
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_25sdp"
                android:fontFamily="@font/fontstyle"
                android:paddingStart="@dimen/_8ssp"
                android:textColor="@color/black"
                android:text="@string/category"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/subcategory"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8ssp"
        android:layout_margin="@dimen/_20ssp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_12ssp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/back"
            >
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/folder"/>
            <TextView
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_25sdp"
                android:fontFamily="@font/fontstyle"
                android:paddingStart="@dimen/_8ssp"
                android:textColor="@color/black"
                android:text="@string/sub_category"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8ssp"
        android:id="@+id/product"
        android:layout_margin="@dimen/_20ssp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_12ssp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/back1"
            >
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/product"/>
            <TextView
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_25sdp"
                android:fontFamily="@font/fontstyle"
                android:paddingStart="@dimen/_8ssp"
                android:textColor="@color/black"
                android:text="@string/products"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>