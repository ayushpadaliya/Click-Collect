<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5ssp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/editBack1"
        android:layout_gravity="center"
        android:padding="@dimen/_10ssp"
        android:layout_marginEnd="@dimen/_5ssp"
        android:layout_marginStart="@dimen/_5ssp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/orderVname"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="ashneer grover"
            android:padding="@dimen/_5ssp"
            android:layout_gravity="start"
            android:fontFamily="@font/fontstyle"/>
        <TextView
            android:id="@+id/orderPname"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_width="0dp"
            android:padding="@dimen/_5ssp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:layout_weight="1.5"
            android:layout_marginStart="@dimen/_5ssp"
            android:text="redmi"
            android:layout_gravity="start"
            android:fontFamily="@font/fontstyle"/>
        <TextView
            android:id="@+id/orderprice"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:layout_marginStart="@dimen/_5ssp"
            android:padding="@dimen/_5ssp"
            android:layout_weight="0.5"
            android:text="15000"
            android:gravity="center"
            android:layout_gravity="start"
            android:fontFamily="@font/fontstyle"/>
        <TextView
            android:id="@+id/orderQuant"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:layout_marginStart="@dimen/_5ssp"
            android:padding="@dimen/_5ssp"
            android:layout_weight="1"
            android:text="5qts"
            android:layout_gravity="start"
            android:fontFamily="@font/fontstyle"/>
        <ImageView
            android:id="@+id/cancel"
            android:layout_marginStart="@dimen/_7ssp"
            android:layout_width="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_3ssp"
            android:visibility="gone"
            android:background="@drawable/cancel"
            android:layout_height="@dimen/_20ssp"
            />
        <ImageView
            android:id="@+id/accept"
            android:layout_marginStart="@dimen/_7ssp"
            android:layout_width="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_3ssp"
            android:background="@drawable/accept"
            android:visibility="gone"
            android:layout_height="@dimen/_20ssp"
            />
        <ImageView
            android:id="@+id/pending"
            android:layout_marginStart="@dimen/_7ssp"
            android:layout_width="@dimen/_20ssp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_3ssp"
            android:background="@drawable/timer"
            android:layout_height="@dimen/_20ssp"
            />
    </LinearLayout>






</LinearLayout>