<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/VendorOrderClick"
        android:layout_width="match_parent"
        android:padding="@dimen/_10ssp"
        android:layout_margin="@dimen/_10ssp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5ssp"
        app:cardPreventCornerOverlap="true"
        >
        <ImageView
            android:id="@+id/view_more"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_68sdp"
            android:background="@drawable/marketing"
            android:layout_gravity="start"/>
        <ImageView
            android:id="@+id/more"
            android:layout_width="@dimen/_20ssp"
            android:layout_height="@dimen/_20ssp"
            android:background="@drawable/more"
            android:layout_margin="@dimen/_5ssp"
            android:layout_gravity="end|bottom"/>
        <TextView
            android:id="@+id/VendorOrderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Padaliya Aayush"
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_62sdp"
            android:fontFamily="@font/fontstyle"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/VendorOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ord152364"
            android:layout_marginTop="@dimen/_25ssp"
            android:textSize="@dimen/_11ssp"
            android:layout_marginStart="@dimen/_62sdp"
            android:textColor="@color/background"/>
        <TextView
            android:id="@+id/VendorOrderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50000"
            android:textSize="@dimen/_11ssp"
            android:layout_marginStart="@dimen/_62sdp"
            android:layout_marginTop="@dimen/_40ssp"
            android:textColor="@color/background"/>
        <TextView
            android:id="@+id/VendorOrderQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Qts"

            android:textSize="@dimen/_11ssp"
            android:layout_marginStart="@dimen/_62sdp"
            android:layout_marginTop="@dimen/_55ssp"
            android:textColor="@color/background"/>
        <ImageView
            android:id="@+id/acceptOrders"
            android:layout_width="@dimen/_20ssp"
            android:background="@drawable/green"
            android:layout_height="@dimen/_20ssp"
            android:layout_margin="@dimen/_5ssp"
            android:layout_gravity="end"
            android:text="@string/vendor"/>
        <ImageView
            android:id="@+id/cancelOrders"
            android:layout_width="@dimen/_20ssp"
            android:background="@drawable/cancel"
            android:layout_height="@dimen/_20ssp"
            android:layout_gravity="end|center"
android:layout_margin="@dimen/_5ssp"
            />


    </androidx.cardview.widget.CardView>

</LinearLayout>